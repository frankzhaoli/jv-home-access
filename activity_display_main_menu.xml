<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp"
    tools:context="com.xshiki.zhaoli.jvha.DisplayMainMenu"
    android:id="@+id/mainmenulayout">

<com.google.android.gms.ads.AdView
    android:id="@+id/gradebottomadview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    ads:adSize="BANNER"
    ads:adUnitId="@string/banner_ad_unit_id2">

</com.google.android.gms.ads.AdView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Grades"
        android:id="@+id/textView"
        android:layout_below="@+id/gradebutton"
        android:layout_alignLeft="@+id/gradebutton"
        android:layout_alignStart="@+id/gradebutton"
        android:typeface="normal"
        android:textSize="15dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/gradebutton"
        android:onClick="clickGrades"
        android:background="@drawable/stack"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/calendarbutton"
        android:layout_alignStart="@+id/calendarbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teacherbutton"
        android:background="@drawable/user"
        android:onClick="clickTeachers"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="35dp"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/gradebottomadview"
        android:layout_alignEnd="@+id/gradebottomadview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Teachers"
        android:id="@+id/textView3"
        android:layout_below="@+id/teacherbutton"
        android:layout_alignLeft="@+id/teacherbutton"
        android:layout_alignStart="@+id/teacherbutton"
        android:textSize="15dp"
        android:typeface="normal"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarbutton"
        android:background="@drawable/calendar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="40dp"
        android:onClick="clickCalender"
        android:layout_alignTop="@+id/announcementbutton"
        android:layout_above="@+id/textView15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/announcementbutton"
        android:background="@drawable/megaphone"
        android:onClick="clickAnnouncements"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Announcements"
        android:id="@+id/textView5"
        android:layout_below="@+id/announcementbutton"
        android:layout_alignLeft="@+id/announcementbutton"
        android:layout_alignStart="@+id/announcementbutton"
        android:textSize="15dp"
        android:typeface="normal"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsbutton"
        android:background="@drawable/news"
        android:layout_marginTop="60dp"
        android:onClick="clickNews"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CFISD News"
        android:id="@+id/textView7"
        android:layout_below="@+id/newsbutton"
        android:layout_alignLeft="@+id/newsbutton"
        android:layout_alignStart="@+id/newsbutton"
        android:textSize="15dp"
        android:typeface="normal"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsbutton"
        android:background="@drawable/settings"
        android:onClick="clickSettings"
        android:layout_alignTop="@+id/newsbutton"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Settings"
        android:id="@+id/textView8"
        android:textSize="15dp"
        android:typeface="normal"
        android:layout_below="@+id/settingsbutton"
        android:layout_alignLeft="@+id/settingsbutton"
        android:layout_alignStart="@+id/settingsbutton"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CFISD Calendar"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/calendarbutton"
        android:layout_alignStart="@+id/calendarbutton"
        android:textSize="15dp"
        android:typeface="normal"
        android:textColor="#000000" />

</RelativeLayout>
